{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "coverage",
    "tailwindcss-weapp",
    "**/dist",
    "**/build",
    "**/node_modules",
    "**/.turbo",
    "**/.cache",
    "website/playwright-report",
    "website/test-results"
  ]
}
