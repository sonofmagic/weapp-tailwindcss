{
  "name": "@weapp-tailwindcss/runtime",
  "type": "module",
  "version": "0.1.0",
  "description": "Shared runtime helpers (transformers, clsx wrappers, metadata) for weapp-tailwindcss 在小程序运行时的适配层。",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "homepage": "https://tw.icebreaker.top/docs/community/merge/runtime-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-tailwindcss.git",
    "directory": "packages-runtime/runtime"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/weapp-tailwindcss/issues"
  },
  "keywords": [
    "tailwindcss",
    "mini-program",
