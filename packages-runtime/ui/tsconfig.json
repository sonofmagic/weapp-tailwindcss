{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@tarojs/components": [
        "./node_modules/@tarojs/components"
      ]
    },
    "types": [
      "vitest/globals"
    ],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "tailwind.config.ts"
  ]
}
