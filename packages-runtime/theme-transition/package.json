{
  "name": "theme-transition",
  "type": "module",
  "version": "2.0.1",
  "description": "提供 CSS/SCSS/Tailwind 插件的主题过渡能力，适配 weapp-tailwindcss。",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "homepage": "https://tw.icebreaker.top/docs/community/theme-transition",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-tailwindcss.git",
    "directory": "packages-runtime/theme-transition"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/weapp-tailwindcss/issues"
  },
  "keywords": [
    "theme",
    "transition",
    "tailwindcss",
    "mini-program"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./tailwindcss": {
      "import": {
        "types": "./dist/tailwindcss.d.mts",
        "default": "./dist/tailwindcss.mjs"
      },
      "require": {
        "types": "./dist/tailwindcss.d.cts",
        "default": "./dist/tailwindcss.cjs"
      }
    },
    "./scss": "./scss/index.scss",
    "./scss/mixins": "./scss/mixins.scss",
    "./scss/*": "./scss/*",
    "./css": "./css/index.css",
    "./css/*": "./css/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "css",
    "dist",
    "scss"
  ],
  "scripts": {
    "dev": "tsdown --watch --sourcemap",
    "build": "tsdown",
    "test": "vitest run",
    "test:dev": "vitest",
    "release": "pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsx scripts/index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./tailwindcss": {
        "import": {
          "types": "./dist/tailwindcss.d.mts",
          "default": "./dist/tailwindcss.mjs"
        },
        "require": {
          "types": "./dist/tailwindcss.d.cts",
          "default": "./dist/tailwindcss.cjs"
        }
      },
      "./scss": "./scss/index.scss",
      "./scss/mixins": "./scss/mixins.scss",
      "./scss/*": "./scss/*",
      "./css": "./css/index.css",
      "./css/*": "./css/*"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts"
  }
}
