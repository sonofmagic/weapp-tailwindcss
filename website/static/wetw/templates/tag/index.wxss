.wetw-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 14rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  line-height: 1.4;
  font-weight: 600;
}

.wetw-tag--primary {
  background-color: #0ea5e9;
  color: #f8fafc;
}

.wetw-tag--neutral {
  background-color: #f1f5f9;
  color: #0f172a;
}

.wetw-tag--danger {
  background-color: #fef2f2;
  color: #991b1b;
}
