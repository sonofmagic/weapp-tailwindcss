{
  "name": "weapp-ide-cli",
  "type": "module",
  "version": "2.0.3",
  "description": "让微信开发者工具，用起来更加方便！",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/sonofmagic/weapp-tailwindcss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-tailwindcss.git",
    "directory": "packages/weapp-ide-cli"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/weapp-tailwindcss/issues"
  },
  "keywords": [
    "weapp",
    "weapp-cli",
    "wechat",
    "cli",
    "uni-app",
    "taro",
    "ide",
    "weapp-ide",
    "mini",
    "miniprogram"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "weapp": "dev/bin.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch --sourcemap",
    "build": "tsup",
    "release": "node scripts/release.js",
    "test:dev": "vitest",
    "test": "vitest run",
    "weapp": "tsx src/cli.ts",
    "debug": "tsx src/cli.ts config",
    "raw": "node bin/weapp.js",
    "sync": "cnpm sync weapp-ide-cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
      "weapp": "bin/weapp.js",
      "weapp-ide-cli": "bin/weapp.js"
    }
  },
  "dependencies": {
    "@weapp-core/logger": "workspace:^",
    "execa": "9.4.0",
    "fs-extra": "^11.2.0",
    "pathe": "^1.1.2"
  }
}
