{
  "name": "theme-transition",
  "type": "module",
  "version": "0.0.3",
  "description": "tsup(esbuild) build package template",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-tailwindcss.git",
    "directory": "packages/theme-transition"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/weapp-tailwindcss/issues"
  },
  "keywords": [
    "theme",
    "transition"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./tailwindcss": "./src/tailwindcss",
    "./scss": "./scss/index.scss",
    "./scss/mixins": "./scss/mixins.scss",
    "./scss/*": "./scss/*",
    "./css": "./css/index.css",
    "./css/*": "./css/*"
  },
  "files": [
    "css",
    "dist",
    "scss"
  ],
  "scripts": {
    "dev": "tsup --watch --sourcemap",
    "build": "tsup",
    "test": "vitest run",
    "test:dev": "vitest",
    "release": "pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsx scripts/index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./tailwindcss": {
        "types": "./dist/tailwindcss.d.ts",
        "import": "./dist/tailwindcss.js",
        "require": "./dist/tailwindcss.cjs"
      },
      "./scss": "./scss/index.scss",
      "./scss/mixins": "./scss/mixins.scss",
      "./scss/*": "./scss/*",
      "./css": "./css/index.css",
      "./css/*": "./css/*"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
