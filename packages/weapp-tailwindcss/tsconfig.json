{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#test/*": [
        "test/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "webpack",
      "node",
      "vitest/globals"
    ],
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/types",
    "./*.d.ts",
    "demo/**/*",
    "test/fixtures/**/*"
  ]
}
