    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/index/daisyui",
      "style": {
        "navigationBarTitleText": "daisyui"
      }
    },
    {
      "path": "pages/index/peer",
      "style": {
        "navigationBarTitleText": "peer"
      }
    },
    {
      "path": "pages/issue/case55",
      "style": {
        "navigationBarTitleText": "case55"
      }
    },
    {
      "path": "pages/issue/tailwind-children",
