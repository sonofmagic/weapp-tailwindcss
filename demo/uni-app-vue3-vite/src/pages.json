      }
    },
    {
      "path": "pages/issue/typography",
      "style": {
        "navigationBarTitleText": "typography"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "@navBgColor",
    "navigationBarTextStyle": "@navTxtStyle",
    "backgroundColor": "#F8F8F8"
  },
  "condition": {
    "current": 0,
    "list": [
      {
        "path": "pages/index/peer",
        "name": "peer"
      },
      {
        "name": "daisyui",
        "path": "pages/index/daisyui"
      },
      {
        "name": "case55",
        "path": "pages/issue/case55",
        "query": ""
      },
      {
        "name": "case-dynamic-class",
        "path": "pages/issue/case-dynamic-class",
        "query": ""
      },
      {
        "name": "tailwind-children",
        "path": "pages/issue/tailwind-children",
        "query": ""
      },
      {
        "name": "case-support-rpx",
        "path": "pages/issue/case-support-rpx",
        "query": ""
      },
      {
        "name": "subPackages",
        "path": "subs/demo/pages/index",
        "query": ""
      },
      {
        "name": "independent subPackages",
        "path": "moduleA/pages/index",
        "query": ""
      },
      {
        "name": "typography",
        "path": "pages/issue/typography",
        "query": ""
      }
    ]
  },
  "subPackages": [
    {
      "root": "subs/demo",
      "pages": [
        {
          "path": "pages/index"
        }
      ]
    },
    {
      "root": "moduleA",
      "pages": [
        {
          "path": "pages/index"
        },
        {
          "path": "pages/a"
        },
        {
          "path": "pages/b"
        }
      ],
      // uni-app 当前不支持，而且文档中都没有提到
      "_independent": true
    }
  ],
  "easycom": {
    "autoscan": true,
    "custom": {
      // "^u-(.*)": "vk-uview-ui/components/u-$1/u-$1.vue"
      "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "tabBar": {
    "custom": true,
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/issue/case55",
        "text": "case55"
      }
    ]
  }
