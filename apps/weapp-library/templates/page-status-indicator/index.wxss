.page-empty-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 20px;
  text-align: center;
}

.page-empty {
  position: relative;
  top: 50%;
  margin-top: -170px;
}

.page-empty__img {
  width: 200px;
  margin-bottom: 30px;
}

.page-empty__text {
  margin-bottom: 18px;
  font-size: 17px;
  color: #888;
}

.page-empty__btn {
  width: 100%;
}

.page-reloader {
  width: 100%;
  margin-top: 70px;
  text-align: center;
}

.page-reloader__img {
  width: 200px;
  margin-bottom: 10px;
}

.page-reloader__text {
  margin-bottom: 17px;
  font-size: 15px;
  color: #888;
}

.page-reloader__btn {
  width: 200px;
  border: 1px solid #888 !important;
}

/**
 * 加载动画
 */
.page-status-indicator__spinner {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

@-webkit-keyframes webkit-line-scale-pulse-out {
  0% {
    -webkit-transform: scaley(1);
    transform: scaley(1);
  }

  50% {
    -webkit-transform: scaley(0.4);
    transform: scaley(0.4);
  }

  100% {
    -webkit-transform: scaley(1);
    transform: scaley(1);
  }
}

@keyframes line-scale-pulse-out {
  0% {
    -webkit-transform: scaley(1);
    transform: scaley(1);
  }

  50% {
    -webkit-transform: scaley(0.4);
    transform: scaley(0.4);
  }

  100% {
    -webkit-transform: scaley(1);
    transform: scaley(1);
  }
}

.line-scale-pulse-out>view {
  background-color: #999;
  width: 4px;
  height: 35px;
  border-radius: 2px;
  margin: 2px;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  display: inline-block;
  -webkit-animation: webkit-line-scale-pulse-out 0.9s -0.6s infinite cubic-bezier(0.85, 0.25, 0.37, 0.85);
  animation: line-scale-pulse-out 0.9s -0.6s infinite cubic-bezier(0.85, 0.25, 0.37, 0.85);
}

.line-scale-pulse-out>.rect2,
.line-scale-pulse-out>.rect4 {
  -webkit-animation-delay: -0.4s !important;
  animation-delay: -0.4s !important;
}

.line-scale-pulse-out>.rect1,
.line-scale-pulse-out>.rect5 {
  -webkit-animation-delay: -0.2s !important;
  animation-delay: -0.2s !important;
}
