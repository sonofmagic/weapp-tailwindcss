.fixed-header-container {
  padding-top: 64px;
}
.fixed-header-container > .review-header {
  z-index: 5;
  position: fixed;
  top: 0;
  width: 100%;
  height: 64px;
}
.review-book {
  margin-bottom: 13px;
}
.review-header {
  /*position: sticky;
  top: 0;*/
  padding-top: 20px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1px solid #D9D9D9;
}
.review-header:before {
  display: none;
}

.popup-bd {
  padding: 30px 50px;
}
.popup-bd__label {
  margin-bottom: 16px;
  font-size: 15px;
  color: #888;
  text-align: center;
}
.popup-bd__score {
  margin-bottom: 20px;
  text-align: center;
}
.popup-bd__textarea {
  margin-bottom: 20px;
  padding:10px 15px;
  border-radius: 4rpx;
  border: 1rpx solid #D9D9D9;
}
.popup-bd__btn-area {
  width: 150px;
  margin: 0 auto;
}