<view class="page">
  <view class="page__hd">
    <view class="page__title">SendCode</view>
    <view class="page__desc">发送短信按钮</view>
  </view>
  <view class="page__bd">
    <view class="page__section-title page__section-title--first">基本用法</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号" type="number" />
        </view>
        <send-code id="send-btn-1" bindtap="onSend"></send-code>
      </view>
    </view>

    <view class="page__section-title">自定义文字</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">Falcon 9</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="B1044" type="number" />
        </view>
        <send-code id="send-btn-2" bindtap="onSend" default-text="发射火箭" pending-text="装载中" counting-text="发射成功"></send-code>
      </view>
    </view>

    <view class="page__section-title">自定义时间间隔</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号" type="number" />
        </view>
        <send-code id="send-btn-3" bindtap="onSend" duration="120"></send-code>
      </view>
    </view>

    <view class="page__section-title">事件</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号" type="number" />
        </view>
        <send-code id="send-btn-4" bindtap="onSend" bindend="onEnd" duration="5"></send-code>
      </view>
    </view>
    <view class="page__desc">tap / end</view>
  </view>
</view>