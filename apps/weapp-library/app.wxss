@import 'styles/weui.wxss';
@import 'styles/font.wxss';
@import 'styles/color.wxss';
@import 'styles/icon.wxss';
@import 'styles/ui.wxss';
@import 'styles/helper.wxss';

/* 组件wxss */
@import "/templates/page-status-indicator/index.wxss";

page {
  background-color: #F0EFF5;
  padding-bottom: 1rpx;  /* 试图解决 load-more 底部 margin 不显示的问题 */
}

/**
 * 组件展示页相关
 */
.page {
  min-height: 100vh;
  background-color: #F8F8F8;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd--spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}
.page__bd > .page__desc {
  margin-left: 15px;
}
.page__bd.page__bd--spacing > .page__desc {
  margin-left: 0;
}

.page__section-title {
  margin-top: 1.2em;
  margin-left: 15px;
  margin-bottom: .6em;
  /*color: #353535;*/
  text-align: left;
  font-size: 14px;
  /*font-weight: bold;*/
}

.page__section-title--first {
  margin-top: 0;
}

.page__bd--spacing > .page__section-title {
  margin-left: 0;
}

.page__placeholder {
  padding: 50px 0;
  text-align: center;
}