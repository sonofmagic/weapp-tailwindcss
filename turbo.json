{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "result.css",
        "result.json",
        "transformed.css"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "tsd": {
      "dependsOn": [
        "^tsd"
      ],
      "outputs": []
    },
    "release": {},
    "sync": {
      "cache": false
    },
    "demo/*#build": {
      "dependsOn": [
        "^build",
        "@weapp-tailwindcss/build-all#build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "result.css",
        "result.json",
        "transformed.css"
      ]
    },
    "apps/**#build": {
      "dependsOn": [
        "^build",
        "@weapp-tailwindcss/build-all#build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "result.css",
        "result.json",
        "transformed.css"
      ]
    }
  },
  "boundaries": {
    "implicitDependencies": [
      "apps/* -> packages/*",
      "demo/* -> packages/*"
    ]
  }
}
