  "license": "MIT",
  "homepage": "https://tw.icebreaker.top/docs/quick-start/native/install",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-tailwindcss.git",
    "directory": "plugins/cli"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/weapp-tailwindcss/issues"
  },
